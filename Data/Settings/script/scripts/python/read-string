#!/usr/bin/python


# imports
import os
import subprocess
import sys

# custom imports
import common
from common import color


# main
if __name__ == "__main__":

    # get script name
    fname = os.path.realpath(__file__)

    # check args
    if len(sys.argv) != 2:
        print common.get_err_msg(fname)
        common.show_usage(fname, ["string"], [])
        sys.exit()

    # get args
    string = "\"" + sys.argv[1] + "\""

    if len(sys.argv) == 3:
        index = sys.argv[2]
    else:
        index = "0"

    # print results
    # print preamble
    text = color.cyan + "\n" + "-" * 79
    print text

    # execute command
    cmd = common.command("grep", "-Rn", "-C", str(index), string)
    res = subprocess.call(cmd, shell=True)

    # print postamble
    text = color.cyan + "-" * 79 + \
        color.END + "\n"
    print text
