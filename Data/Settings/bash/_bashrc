
# ------------------------------------------------------------------------ #
# EXTERNAL FILES                                                           #
# ------------------------------------------------------------------------ #

# -- default settings --
source /home/sbicego/.bash_files/default.sh

# ------------------------------------------------------------------------ #
# RESOURCES BOUNDS                                                         #
# ------------------------------------------------------------------------ #

# -- RAM bound (MB) --
# ulimit -m 2000

# -- stack bound (MB or unlimited) --
# ulimit -s unlimited

# ------------------------------------------------------------------------ #
# PROCESSES SETTINGS                                                       #
# ------------------------------------------------------------------------ #

# -- don't create .pyc files --
export PYTHONDONTWRITEBYTECODE="avoid.pyc.pyo"

# ------------------------------------------------------------------------ #
# BINS                                                                     #
# ------------------------------------------------------------------------ #

# -- standard dirs --
export PATH="/home/sbicego/bin:$PATH"
export PATH="/home/sbicego/usr/bin:$PATH"

# -- scripts --
source /home/sbicego/scripts/import.sh

# -- corral --
alias corral="/home/sbicego/Desktop/executables/corral/corral"

# -- nuXmv --
alias nuXmv="/home/sbicego/Desktop/executables/nuXmv/builds_release/ESTools/nuXmv/bin/nuXmv"

# -- mathsat --
alias mathsat="/home/sbicego/Desktop/executables/nuXmv/builds_release/ESTools/mathsat5/mathsat"

# -- msatic3 --
alias msatic3="/home/sbicego/Desktop/executables/nuXmv/builds_release/ESTools/msatic3/msatic3"

# -- matlab --
export PATH="/home/sbicego/Desktop/executables/MATLAB/R2017a/bin:$PATH"

# ------------------------------------------------------------------------ #
# PYTHON PATHS                                                             #
# ------------------------------------------------------------------------ #

# -- scripts --
export PYTHONPATH="/home/sbicego/scripts/python/common/common:$PATH"

# -- pycparser --
export PYTHONPATH="/home/sbicego/Desktop/executables/pycparser:$PYTHONPATH:"

# -- kratos --
export PYTHONPATH="/home/sbicego/Desktop/executables/kratos/builds_release/kratos/tools:$PYTHONPATH"

# -- ply --
export PYTHONPATH="/home/sbicego/Desktop/executables/ply:$PYTHONPATH:"

# -- pypdf --
export PYTHONPATH="/home/sbicego/Desktop/executables/pyPdf:$PYTHONPATH"

# ------------------------------------------------------------------------ #
# COMMANDS                                                                 #
# ------------------------------------------------------------------------ #

# -- process execution with resources bound --
# -- usage: run <process>
alias run="/home/sbicego/bin/runlim -s 3000 -r 3600"

# -- guess right tool to open file --
# -- usage: open <file>
alias open="/usr/bin/gnome-open"

# -- show resources used by process --
# -- usage: time <process>
alias time="/usr/bin/time --format=\"\n-------------------\n%E s %M KB\n-------------------\n\""

# -- show file lines number --
# -- usage: lines <file>
alias lines="/usr/bin/wc -l <"

# -- open emacs inside bash --
# -- usage: edit [<file>]
alias edit="/usr/bin/emacs -nw"

# -- open eclipse --
# -- usage: eclipse
alias eclipse="/home/sbicego/eclipse/jee-neon/eclipse/eclipse &"

# ------------------------------------------------------------------------ #
# DIRS                                                                     #
# ------------------------------------------------------------------------ #

# -- emacs settings files --
alias emacs-folder="cd /home/sbicego/.emacs_files"

# -- emacs modes files --
alias emacs-mode-folder="cd /home/sbicego/.emacs.d/modes"

# -- bash settings files --
alias bash-folder="cd /home/sbicego/.bash_files"

# -- python scripts --
alias scripts-folder="cd /home/sbicego/scripts/python/common"

# -- latex packages --
alias latex-folder="cd /home/sbicego/texmf/tex/latex"

# -- shared dir --
alias shared-dir="cd /home/sbicego/Desktop/shared"

# -- manual --
alias manual-dir="cd /home/sbicego/Desktop/Settings/Notes"

