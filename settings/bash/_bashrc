
# ------------------------------------------------------------------------ #
# DEFAULT SETTINGS                                                         #
# ------------------------------------------------------------------------ #

# -- default settings --
source /home/sbicego/bash/default.sh

# ------------------------------------------------------------------------ #
# RESOURCES BOUNDS                                                         #
# ------------------------------------------------------------------------ #

# -- RAM bound (MB) --
# ulimit -m 2000

# -- stack bound (MB or unlimited) --
# ulimit -s unlimited

# ------------------------------------------------------------------------ #
# PROCESSES SETTINGS                                                       #
# ------------------------------------------------------------------------ #

# -- don't create .pyc .pyo files --
export PYTHONDONTWRITEBYTECODE="_"

# ------------------------------------------------------------------------ #
# STANDARD BINS                                                            #
# ------------------------------------------------------------------------ #

# -- opam --
source /home/sbicego/.opam/opam-init/init.sh

# ------------------------------------------------------------------------ #
# BINS                                                                     #
# ------------------------------------------------------------------------ #

# -- scripts --
source /home/sbicego/scripts/import.sh

# -- eclipse --
alias eclipse="/home/sbicego/exe/eclipse/jee-neon/eclipse/eclipse"

# -- matlab --
export PATH="/home/sbicego/exe/matlab/R2017a/bin:$PATH"
alias matlab="/home/sbicego/exe/matlab/R2017a/bin/matlab -sd /home/sbicego/exe/cocoSim/source/cocoSim"

# -- nuXmv --
export PATH="/home/sbicego/exe/nuXmv/build/ESTools/nuXmv/bin:$PATH"
# -- mathsat --
alias mathsat="/home/sbicego/exe/nuXmv/build/ESTools/mathsat5/mathsat"
# -- msatic3 --
alias msatic3="/home/sbicego/exe/nuXmv/build/ESTools/msatic3/msatic3"

# -- kratos --
alias kratos="/home/sbicego/exe/kratos/build/kratos/kratos"

# -- lustrec --
export PATH="/home/sbicego/exe/cocoSim/build/lustrec/bin:$PATH"
# -- z3 --
export PATH="/home/sbicego/exe/cocoSim/build/z3/bin:$PATH"
# -- zustre --
export PATH="/home/sbicego/exe/cocoSim/build/zustre/run/bin:$PATH"

# ------------------------------------------------------------------------ #
# PYTHON PATHS                                                             #
# ------------------------------------------------------------------------ #

# -- scripts --
export PYTHONPATH="/home/sbicego/scripts/python:$PATH"

# -- pycparser --
export PYTHONPATH="/home/sbicego/exe/pycparser:$PYTHONPATH:"

# -- kratos --
export PYTHONPATH="/home/sbicego/exe/kratos/build/kratos/tools:$PYTHONPATH"

# -- ply --
export PYTHONPATH="/home/sbicego/exe/ply:$PYTHONPATH:"

# ------------------------------------------------------------------------ #
# COMMANDS                                                                 #
# ------------------------------------------------------------------------ #

# -- process execution with resources bound --
# -- usage: run <process>
alias run="/home/sbicego/usr/bin/runlim -s 3000 -r 3600"

# -- guess right tool to open file --
# -- usage: open <file>
alias open="/usr/bin/gnome-open"

# -- show resources used by process --
# -- usage: time <process>
alias time="/usr/bin/time --format=\"\n-------------------\n%E s %M KB\n-------------------\n\""

# -- show file lines number --
# -- usage: lines <file>
alias lines="/usr/bin/wc -l <"

# -- open emacs inside bash --
# -- usage: edit [<file>]
alias edit="/usr/bin/emacs -nw"

# ------------------------------------------------------------------------ #
# DIRS                                                                     #
# ------------------------------------------------------------------------ #

# -- emacs settings files --
alias emacs-dir="cd /home/sbicego/emacs"

# -- python scripts --
alias scripts-dir="cd /home/sbicego/scripts/python"

# -- latex packages --
alias latex-dir="cd /home/sbicego/texmf/tex/latex"

# -- shared dir --
alias shared-dir="cd /home/sbicego/shared"

# -- manual --
alias manual-dir="cd /home/sbicego/Desktop/Settings/Notes"

